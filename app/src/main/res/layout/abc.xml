<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/border"
        android:id="@+id/sub1Layout">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight=".70">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Subject 1"
                    android:id="@+id/mainTVSub1"
                    android:textStyle="bold|italic"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="20dp"
                    android:textColor="#000000"/>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Attended: "
                        android:textSize="15dp"
                        android:layout_weight=".50"
                        android:id="@+id/tvAttendedClass1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total: "
                        android:textSize="15dp"
                        android:layout_weight=".50"
                        android:id="@+id/tvTotalClass1"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="88.8%"
                android:textSize="20dp"
                android:gravity="center"
                android:id="@+id/tvPercentage1"
                android:background="@drawable/border_percentage" />

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click To Mark Attendance"
            android:id="@+id/buttonToMark1"
            android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large"
            style="@android:style/Widget.Button.Inset" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linearLayoutToMark1"
            android:visibility="gone"
            android:weightSum="1">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight=".33"
                android:gravity="center">
                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_restore_black_24dp"
                    android:scaleType="fitCenter"
                    android:background="@null"
                    android:id="@+id/iBReset1"
                    android:layout_gravity="center_horizontal" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Reset"
                    android:gravity="center"
                    android:textSize="15dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight=".33"
                android:gravity="center">
                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/wrong"
                    android:scaleType="fitCenter"
                    android:background="@null"
                    android:id="@+id/iBWrong1"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Absent"
                    android:gravity="center"
                    android:textSize="15dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight=".34"
                android:gravity="center">
                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/right"
                    android:scaleType="fitCenter"
                    android:background="@null"
                    android:id="@+id/iBRight1" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Present"
                    android:gravity="center"
                    android:textSize="15dp"/>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="!!! You are on track !!!"
                android:textSize="17dp"
                android:layout_weight=".75"
                android:id="@+id/tvOnTrack1"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/border_percentage"
                android:scaleType="fitEnd"
                android:layout_weight=".25"
                android:id="@+id/ivAfterMarking1"/>


        </LinearLayout>


    </LinearLayout>
</LinearLayout>